@model Arctos.Models.Product

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ','_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-6"><label class="float-left">@Model.Name</label></div>            <!-- {0:C2} this is current currency-->
            <div class="col-6"><label class="float-right"><span class="text-info h5">@string.Format("{0:C2}", Model.Price)</span></label> </div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" style="height: 250px;" src="@WC.ImagePath@Model.Image" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100" style="background-color: white">@Model.Category.Name</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100" style="background-color:white">@Model.ApplicationType.Name</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <p>@Model.ShortDesc</p>
            </div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-white form-control btn-sm p-2" style="border:1px solid #000;height:40px; color:000;">Show More</a>
            </div>
        </div>
    </div>
</div>

